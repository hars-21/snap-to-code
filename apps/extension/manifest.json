{
	"manifest_version": 3,
	"name": "Snap to Code",
	"version": "1.0.0",
	"description": "Convert UI screenshots to code",
	"permissions": ["activeTab", "tabs", "contextMenus"],
	"action": {
		"default_popup": "popup/index.html"
	},
	"background": {
		"service_worker": "background/index.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content/index.js"]
		}
	]
}
