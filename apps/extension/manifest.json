{
	"manifest_version": 3,
	"name": "Snap2Code",
	"version": "1.0.0",
	"description": "Convert UI screenshots to code",
	"permissions": ["activeTab", "tabs", "contextMenus"],
	"action": {
		"default_popup": "popup/index.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"32": "icons/icon32.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"background": {
		"service_worker": "background/index.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content/index.js"]
		}
	],
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
